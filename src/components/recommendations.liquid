<div class="recommendations bg-neutral-50 mx-auto py-10 mb-16 md:mb-32">
    <div class="block lg:flex justify-center lg:justify-between lg:items-stretch">
        <h3
            class="text-[28px] leading-[28px] text-center text-primary font-light uppercase tracking-[0.355px] mb-6 lg:hidden">
            You may be interested in
        </h3>
        <div
            class="image-static lg:flex-[0_0_40%] 2xl:flex-[0_0_34.15%] max-w-[600px] lg:max-w-full h-max lg:h-auto m-auto lg:m-0 px-1 lg:px-10 mb-1 lg:mb-0">
            <picture class="block h-full">
                <source srcset="
                      /src/assets/images/image.webp
                    " type="image/webp" />
                <img src="/src/assets/images/image.jpg" class="w-full h-full object-cover" alt="Image men" />
            </picture>
        </div>

        <div class="overflow-hidden max-w-full relative">
            <h3 class="text-3xl text-primary font-light uppercase tracking-[0.355px] mb-6 hidden lg:block">
                You may be interested in
            </h3>
            <div class="swiper recommendationsSlider w-full">
                <div class="swiper-wrapper !h-max !z-0">
                    <template x-for="(recommendation, recIndex) in recommendations" :key="recommendation.id">
                        <div class="swiper-slide group !h-max">
                            <a :href="currentRecommendations[recIndex].url" class="relative block">
                                <div class="picture relative">
                                    <template x-if="recommendation.bestSeller">
                                        <span class="badge-best-seller">Best
                                            Seller</span>
                                    </template>
                                    <span
                                        class="absolute opacity-0 group-hover:opacity-100 top-0 right-0 w-[48px] h-[48px] flex items-center justify-center cursor-pointer z-3">
                                        <svg class="w-[24px] h-[24px] fill-current">
                                            <use xlink:href="#icon-heart"></use>
                                        </svg>
                                    </span>
                                    <template x-for="(img, index) in currentRecommendations[recIndex].images"
                                        :key="index">
                                        <picture :class="{
        'block relative z-1': index === 0,
        'absolute inset-0 z-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none': index === 1
      }">
                                            <source :srcset="img.webp" type="image/webp" />
                                            <img :src="img.jpg" :alt="recommendation.name"
                                                class="w-full h-full object-cover" />
                                        </picture>
                                    </template>
                                </div>
                                <div class="relative px-4 py-6 lg:pb-0">
                                    <span class="block text-primary tracking-[.32px] py-2 uppercase"
                                        x-text="recommendation.name"></span>
                                    <span class="block text-primary tracking-[.32px] lg:mb-2">
                                        $<span x-text="recommendation.price"></span>
                                    </span>
                                </div>
                            </a>
                            <div class="absolute lg:relative px-4 py-2 z-3 translate-y-[-134px] lg:translate-y-0">
                                <span x-text="`${recommendation.colors.length} colors`"
                                    class="absolute top-[50%] translate-y-[-50%] text-sm font-light text-neutral-800 group-hover:opacity-0 transition-opacity duration-300 hidden lg:block"></span>
                                <ul
                                    class="relative flex flex-wrap gap-2 lg:opacity-0 lg:group-hover:opacity-100 transition-opacity duration-300">
                                    <template x-for="color in recommendation.colors" :key="color.name">
                                        <li>
                                            <button type="button" :class="{
        'border-primary': color.name === currentRecommendations[recIndex].color,
        'border-neutral-400': color.name !== currentRecommendations[recIndex].color
      }" @click="selectRecommendationColor(recIndex, color.name)"
                                                class="w-[32px] h-[32px] flex items-center rounded-[50%] border border-neutral-400 hover:border-primary p-px cursor-pointer transition-colors duration-300"
                                                :aria-label="'Select color ' + color.name">
                                                <picture>
                                                    <source :srcset="color.images[0].webp" type="image/webp" />
                                                    <img :src="color.images[0].jpg" :alt="color.name"
                                                        class="w-full h-full rounded-full object-cover" />
                                                </picture>
                                            </button>
                                        </li>
                                    </template>
                                </ul>
                            </div>
                        </div>
                    </template>
                </div>
                <div
                    class="button-prev absolute top-[50%] translate-y-[-50%] left-4 hidden lg:flex items-center justify-center text-black w-12 h-12 cursor-pointer">
                    <svg class="w-[24px] h-[24px] fill-current rotate-180">
                        <use xlink:href="#icon-chevron-right"></use>
                    </svg>
                </div>
                <div
                    class="button-next absolute top-[50%] translate-y-[-50%] right-4 hidden lg:flex items-center justify-center text-black w-12 h-12 cursor-pointer">
                    <svg class="w-[24px] h-[24px] fill-current">
                        <use xlink:href="#icon-chevron-right"></use>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>